// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  username String   @unique
  password String
  role     Role     @default(USER)
  Profile  Profile?
}

model Profile {
  id String @id @default(uuid())

  name      String
  email     String @unique
  gender    String
  birthdate String

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique
}

model Hobbies {
  id Int @id @default(autoincrement())

  picture     String
  title       String
  description String?
}

model Skills {
  id Int @id @default(autoincrement())

  icon  String
  title String
  type  SkillType

  projects   Projects[]
  experience Experience[]
}

model Experience {
  id Int @id @default(autoincrement())

  icon         String?
  title        String
  description  String
  date_started DateTime
  date_ended   DateTime?

  skills Skills[]
}

model Projects {
  id Int @id @default(autoincrement())

  picture      String?
  title        String
  affiliation  String
  description  String
  date_started DateTime
  date_ended   DateTime

  skills Skills[]
}

enum Role {
  USER
  ADMIN
}

enum SkillType {
  SOFT
  HARD
}
